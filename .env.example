PORT=3000

# MySQL connection (must match your Workbench connection)
# If you later run the Nest app inside Docker, set DB_HOST=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=todo_user
DB_PASS=your_password_here
DB_NAME=todo_db

# Docker (used by docker-compose for the MySQL root user)
MYSQL_ROOT_PASSWORD=change_me_root_password

# TypeORM (dev)
TYPEORM_LOGGING=false
# If true, the app will attempt to run pending migrations on startup.
# Recommended: keep false in production and run migrations during deploy.
TYPEORM_MIGRATIONS_RUN=false
